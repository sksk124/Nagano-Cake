<div class="container">
  <h4 class="text-center mb-5">会員一覧</h4>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>カナ</th>
            <th>電話番号</th>
            <th>会員ステータス</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
              <td><%= customer.last_name_kana + " " + customer.first_name_kana %></td>
              <td><%= customer.telephone_number %></td>
              <td><%= customer.is_deleted ? '退会済み' : '有効' %></td>
              <td><%= link_to '編集', edit_admin_customer_path(customer), class: 'btn btn-success btn-sm' %></td>
              <td><%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
