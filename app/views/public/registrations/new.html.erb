<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

<div class="panel-heading">
          <h3 class="panel-title text-center" style="font-size: 24px" >会員登録</h3>
        </div>

<%= form_with(model: resource, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "姓" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "名" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "姓カナ" %><br />
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "名カナ"%><br />
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "password(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_area :address, autocomplete: "address", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %><br />
    <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
  </div>

　<h4> </h4>
  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-success" %>
  </div>
<% end %>


    </div>
  </div>
</div>

