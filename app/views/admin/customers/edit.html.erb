<h1>顧客情報の編集</h1>

<%= form_with(model: [:admin, @customer], local: true) do |form| %>

  <div class="form-group">
    <%= form.label :last_name, '姓' %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :first_name, '名' %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name_kana, '姓カナ' %>
    <%= form.text_field :last_name_kana, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :first_name_kana, '名カナ' %>
    <%= form.text_field :first_name_kana, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code, '郵便番号' %>
    <%= form.text_field :postal_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address, '住所' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telephone_number, '電話番号' %>
    <%= form.text_field :telephone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :is_deleted, '会員ステータス' %>
    <%= form.select :is_deleted, { '有効': false, '退会済み': true }, { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', admin_customer_path(@customer) %>
